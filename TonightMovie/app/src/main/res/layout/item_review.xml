<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="reviewViewModel"
            type="nanodegree.diegobaldi.it.tonightmovie.viewmodels.ReviewViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/review_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            tools:text="Lorem Ipsum"
            android:text="@{reviewViewModel.content}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="by Mario rossy"
            android:text="@{reviewViewModel.author}" />

    </LinearLayout>

</layout>